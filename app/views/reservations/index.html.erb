<%= provide(:title, "All reservations")%>

<p id="notice"><%= notice %></p>

<head>
  <style>
    th, td{
        color:white;
    }
  </style>
</head>
<h1>Listing Reservations</h1>

<table class="table table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Suite</th>
      <th>Date in</th>
      <th>Date out</th>
      <th>Hosts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.surname %></td>
        <td><%= reservation.suite %></td>
        <td><%= reservation.date_in %></td>
        <td><%= reservation.date_out %></td>
        <td><%= reservation.hosts %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open"</span>'.html_safe, reservation %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-edit"</span>'.html_safe, edit_reservation_path(reservation) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash"</span>'.html_safe, reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


