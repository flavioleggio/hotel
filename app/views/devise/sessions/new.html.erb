<%= provide(:title, "Log in")%>

<div class="col-md-5">

 <h1>Log in</h1></div>
</br></br></br></br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-inline' }) do |f| %>
  <div class="form group">
    <%= f.label :email, class: "col-md-2 control-label" %><br />
    <div class="col-md-5">
        <%= f.email_field :email, autofocus: true , class: "form-control", placeholder:"Enter email here" %>
    </div>
  </div>
    </br> </br>
  <div class="form group">
    <%= f.label :password, class: "col-md-2 control-label"  %><br />
    <div class="col-md-5">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Enter password here"   %>
  </div>
  </div>
    </br></br>
  <% if devise_mapping.rememberable? -%>
    <div class="form group">
      <div class="col-md-5">
        <%= f.check_box :remember_me, class:"checkbox" %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>
    </br></br>
    <div class="col-md-1">
        <div class="actions">
            <%= f.submit "Log in",class:"btn btn-success" %> <br><br>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-warning"%><br><br>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-danger"%>
        </div>
    </div>
<% end %>


