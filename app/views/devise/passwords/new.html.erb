<%= provide(:title, "Reset password")%>
<div class="col-md-5">
  <h1>Forgot your password?</h1></div>
</br></br></br></br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form group">
    <%= f.label :email, class: "col-md-2 control-label" %><br />
    <div class="col-md-5">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Enter email here"  %>
    </div>
  </div>
    <br><br><br>
    <div class="col-md-1">
        <div class="actions">
            <%= f.submit "Send me reset password instructions",class:"btn btn-info" %>
        </div>
    </div>
<% end %>
</br> </br> </br>
